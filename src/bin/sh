#!/bin/lua

--[[for k,v in pairs({ 
    ["PATCH"] = "Fear Fog", 
    ["VERSION"] = getAppProperty("MIDlet-Version"), 
    ["RELEASE"] = "stable", 
    ["HOSTNAME"] = "localhost",
    ["SHELL"] = "/bin/sh"
}) do
    print(k, v)
end

for k,v in pairs({ 
    ["TYPE"] = "platform", 
    ["CONFIG"] = "configuration", 
    ["PROFILE"] = "profiles", 
    ["LOCALE"] = "locale" 
}) do
    print(k, getAppProperty("/microedition." .. v))
end]]

local xterm = graphics.new("screen", "OpenTTY")
local exit = {
    label = "Exit"
}
exit = graphics.new("command", exit)

graphics.addCommand(exit)
graphics.handler({
    [exit] = function() 
        os.execute("quit")
    end
})

graphics.display(xterm)