#!/bin/lua



-- Versão mínima funcional
print("OpenTTY Iniciando...")

-- Criar interface básica
local screen = graphics.new("screen", "OpenTTY")
local runCmd = graphics.new("command", {label = "Executar", type = "ok"})

graphics.append(screen, "Sistema pronto")
graphics.addCommand(screen, runCmd)

graphics.handler(screen, {
    [runCmd] = function()
        print("Comando executado com sucesso!")
    end
})

graphics.display(screen)