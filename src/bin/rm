#!/bin/lua

local libcore = require("libcore")

if #arg > 1 then
    for i = 1, #arg - 1 do
        local status = os.remove(os.join(arg[i]))

        if status > 0 then
            print("rm: " .. arg[i] .. ": " .. libcore.errormsg(status))
            os.exit(status)
        end
    end
else
    print("rm: usage: rm [file]")
    os.exit(2)
end