#!/bin/lua

local libcore = require("libcore")

if #arg > 1 then
    for i = 1, #arg - 1 do
        local status = os.remove(libcore.joinpath(arg[i]))

        if status == 1 then
            print("rm: " .. arg[i] .. ": java.io.IOException")
        elseif status == 5 then
            print("rm: " .. arg[i] .. ": read-only storage")
        elseif status == 13 then
            print("rm: " .. arg[i] .. ": permission denied")
        elseif status == 127 then
            print("rm: " .. arg[i] .. ": not found")
        end

        if status > 0 then
            os.exit(status)
        end
    end
else
    print("rm: missing operand")
    os.exit(2)
end