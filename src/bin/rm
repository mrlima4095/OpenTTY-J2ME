#!/bin/lua

if #arg > 1 then
    for i = 1, #arg - 1 do
        local file = arg[i]

        if string.sub(file, 1, 1) ~= "/" then file = os.getcwd() + file end

        local status = os.remove(file)
        if status == 1 then
            print("rm: " .. arg[i] .. ": ")
        elseif status == 5 then
            print("rm: " .. arg[i] .. ": read-only storage")
        elseif status == 13 then
            print("rm: " .. arg[i] .. ": permission denied")
        elseif status == 127 then
            print("rm: " .. arg[i] .. ": not found")
        end

        if status > 0 then
            os.exit(status)
        end
    end
else
    print("rm: missing operand")
    os.exit(2)
end