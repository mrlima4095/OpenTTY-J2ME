#!/bin/lua

local libcore = {}

libcore.joinpath = function(pwd)
    if not pwd or pwd == "" or pwd == "." then
        return os.getcwd()
    end

    if string.sub(pwd, 1, 1) ~= "/" then
        pwd = os.getcwd() .. "/" .. pwd
    end

    local parts = string.split(pwd, "/")


    local result_parts = {}
    for i = 1, #parts do
        local part = parts[i]

        if part == "." then
        elseif part == ".." then
            if #result_parts > 0 then
                table.remove(result_parts)
            end
        else
            table.insert(result_parts, part)
        end
    end

    local result = "/" .. table.concat(result_parts, "/")

    if #result_parts == 0 then
        return "/"
    end

    return result
end


return libcore