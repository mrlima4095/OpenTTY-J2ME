[ Config ]

name=JBuntu
version=1.3.1
description=Desktop for OpenTTY

api.version=1.14
api.error=execute log add error JBuntu requires OpenTTY 1.14; set OLD_TITLE=$TITLE; title JBuntu; warn JBuntu requires OpenTTY 1.14; title $OLD_TITLE; unset OLD_TITLE;

process.name=jbuntu

include=/java/lib/netkit,/java/lib/settings,/java/lib/yang

config=execute set JVERSION=1.3.1; cd; cat .jbuntu-notes; set JBUNTU_NOTES=$OUTPUT; cat .jbuntu-desktop; if (not $OUTPUT) echo make; set DISPLAY=$OUTPUT; hash jauth2; if ($OUTPUT != 0) import jauth2; if ($OUTPUT == 0) rm jauth2; x11 stop; x11 init; x11 cmd hide; x11 item jbuntu; title JBuntu $JVERSION; clear; log add info Running JBuntu $JVERSION; logcat;
command=xterm,jbuntu

xterm=execute x11 $DISPLAY jbuntu;
jbuntu=execute alias xterm=exec cd & x11 $DISPLAY jbuntu; title JBuntu $JVERSION; xterm;

shell.name=jbuntu
shell.args=menu,jnome,run,sync

menu=execute install nano; touch; add list.title=Menu; add list.content=View Logs,Write Notes,General Settings,Desktop Settings,JBuntu Updater,Logout,Exit; add list.back=x11 $DISPLAY jbuntu; add list.button=Open; add View Logs=log view; add Write Notes=x11 quest jbuntu; add General Settings=cfg; add Desktop Settings=jbuntu jnome; add JBuntu Updater=jbuntu sync; add Logout=lock; add Exit=exit; x11 list nano; get nano;
jnome=execute install nano; touch; add list.title=Desktop Settings; add list.content=Legacy,Enhanced; add list.back=jbuntu menu; add Legacy=exec install nano & touch & add make & install .jbuntu-desktop & @reload & import jbuntu & get nano; add Enhanced=exec install nano & touch & add canvas & install .jbuntu-desktop & @reload & import jbuntu & get nano; 

run=execute install nano; touch; add quest.title=$TITLE; add quest.label=(Run) $USERNAME $PATH $; add quest.key=COMMAND; add quest.cmd=exec $COMMAND & unset COMMAND; x11 quest nano; get nano;

sync=execute install nano; proxy raw.githubusercontent.com/mrlima4095/OpenTTY-J2ME/main/assets/lib/jbuntu; hash jbuntu; set LOCAL_HASH=$OUTPUT; hash nano; if ($LOCAL_HASH == $OUTPUT) warn JBuntu is already updated!; if ($LOCAL_HASH != $OUTPUT) exec touch & add screen.title=JBuntu Updater & add screen.content=A new of JBuntu is avaliable! Do you want to update? & add screen.fields=notes & add screen.notes.type=text & add screen.notes.content=A new version of JBuntu is avaliable! Do you want to update? & add screen.button=Update & add screen.button.cmd=clone raw.githubusercontent.com/mrlima4095/OpenTTY-J2ME/main/assets/scripts/update_jbuntu.sh & x11 make nano & get nano; get nano;

[ COMMAND ]

item.label=JBuntu
item.cmd=execute jbuntu;

[ DISPLAY ]

screen.title=JBuntu $JVERSION
screen.content=$JBUNTU_NOTES
screen.back.label=Menu
screen.back=execute jbuntu menu;
screen.button=Apps
screen.button.cmd=execute x11 list jbuntu;
screen.fields=logo,notes
screen.notes.type=text
screen.logo.type=image
screen.logo.img=/java/etc/icons/icon.png
screen.text.type=text
screen.text.content=$JBUNTU_NOTES

canvas.title=JBuntu $JVERSION
canvas.content=$JBUNTU_NOTES
canvas.content.link=execute install nano; touch; add list.title=Menu; add list.content=Write Notes,Desktop Settings; add list.button=Open; add Write Notes=x11 quest jbuntu; add Desktop Settings=jbuntu jnome; x11 list nano; get nano;
canvas.back.label=Menu
canvas.back=execute jbuntu menu;
canvas.button=Apps
canvas.button.cmd=execute x11 list jbuntu;
canvas.mouse.img=/java/etc/icons/cursor.png

quest.title=JBuntu Settings
quest.label=Notes
quest.key=JBUNTU_NOTES
quest.cmd=execute install nano; touch; add $JBUNTU_NOTES; install .jbuntu-notes; get nano;

list.title=JBuntu Apps
list.content=Text Editor,File Explorer,Network Tools,OpenTTY Store,Terminal,Monitor
list.button=Open

Text Editor=execute nano;
File Explorer=execute dir f;
Network Tools=execute nk;
OpenTTY Store=execute yang;
Terminal=execute x11 stop; x11 init; x11 cmd hide; x11 item jbuntu; unalias xterm; x11 term;
Monitor=execute htop;
