[ Config ]

name=JBuntu
version=1.2
description=Desktop for OpenTTY 

api.version=1.11.1
api.error=execute log add error JBuntu requires OpenTTY 1.11.1; warn JBuntu requires OpenTTY 1.11; x11 title JBuntu;

process.name=jbuntu
mod=execute case !trace (jbuntu) exec log add info JBuntu was stopped & @reload; 

include=/java/lib/netkit,/java/lib/settings,/java/lib/yang

config=execute set JVERSION=1.1; cat .jbuntu-notes; set JBUNTU_NOTES=$OUTPUT; cat .jbuntu-config; if (not $OUTPUT) exec set OUTPUT=canvas; set JNOME_DISPLAY=$OUTPUT; x11 stop; x11 init; x11 cmd hide; x11 item jbuntu; title JBuntu $JVERSION; clear; log add info Running JBuntu $JVERSION; logcat;
command=xterm,jbuntu

xterm=execute x11 $JNOME_DISPLAY jbuntu;
jbuntu=execute alias xterm=execute x11 make jbuntu; xterm;

shell.name=jbuntu
shell.args=menu,jnome

menu=install nano; touch; add list.title=Menu; add list.content=View Logs,Write Notes,Desktop Settings,Logout,Exit; add list.back=x11 make jbuntu; add list.button=Open; add View Logs=log view; add Write Notes=x11 quest jbuntu; add Desktop Settings=jbuntu jnome; add Logout=lock; add Exit=exit; x11 list nano; get nano; 
jnome=install nano; touch; add list.title=Desktop Type; add list.content=Legacy,Enhanced; add list.back=jbuntu menu; add list.button=Select; add Legacy=exec install nano & touch & add make & install .jbuntu-config & get nano; add Enhanced=exec install nano & touch & add canvas & install .jbuntu-config & get nano; x11 list nano; get nano; 

[ COMMAND ]

item.label=JBuntu
item.cmd=execute jbuntu;

[ DISPLAY ]

screen.title=JBuntu $JVERSION
screen.content=$JBUNTU_NOTES
screen.back.label=Menu
screen.back=execute jbuntu menu; 
screen.button=Apps
screen.button.cmd=execute x11 list jbuntu;

canvas.title=JBuntu $JVERSION
canvas.content=$JBUNTU_NOTES
canvas.content.link=execute x11 quest jbuntu;
canvas.back.label=Menu
canvas.back=execute jbuntu menu;
canvas.button=Apps
canvas.button.cmd=execute x11 list jbuntu;

quest.title=JBuntu $JVERSION
quest.label=Notes
quest.key=JBUNTU_NOTES
quest.cmd=execute install nano; touch; add $JBUNTU_NOTES; install .jbuntu-notes; get nano;
quest.back=x11 make jbuntu

list.title=JBuntu Apps
list.content=Text Editor,File Explorer,Network Tools,OpenTTY Store,Terminal,Monitor
list.back=execute x11 make jbuntu;
list.button=Open

Text Editor=execute nano;
File Explorer=execute install nano; touch; add list.title=File Explorer; add list.content=My Files,Device Files,Resources; add list.back=x11 list jbuntu; add list.button=Open; add My Files=builtin dir f; add Device Files=builtin dir s; add Resources=builtin ls; x11 list nano; get nano; 
Network Tools=execute nk;
OpenTTY Store=execute yang;
Terminal=execute x11 stop; x11 init; x11 cmd hide; x11 item jbuntu; unalias xterm; x11 term;
Monitor=execute htop;

