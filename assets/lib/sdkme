[ Config ]

name=SmartME
version=1.1
description=OpenTTY Toolkit

api.version=1.16
api.error=execute 
api.match=minimum

include=forge

config=execute set SDK=1.1;
command=sdk

sdk=execute x11 list /home/sdkme; true

shell.name=sdk
shell.args=setxback

setxback=execute alias xterm=exec sdk & unalias xterm;


[ DISPLAY ]

quest.title=Save Project
quest.label=File name
quest.key=FILENAME
quest.cmd=execute install $FILENAME; unset FILENAME;
quest.back=execute sdk;


list.title=SmartME SDK
list.content=Continue editing,New Project,Save Project,File Explorer,Build (from nano),Download Libraries,Documentation,Update SDK,About

Continue editing=execute nano; sdk setxback;
New Project=execute execute install /home/nano; touch; add #include "OpenTTY.h"; add; add int main() {; add; add }; nano; sdk setxback;
Save Project=execute x11 quest /home/sdkme;
File Explorer=execute dir; sdk setxback;
Build (from nano)=execute time build nano;
Download Libraries=exec sdk & case alias (yang) execute set RESOURCE=OpenTTY.h; yang install; set RESOURCE=X11.h; yang install; warn Downloaded Standard Libraries; false; sdk & warn Yang not found
Documentation=execute sdk setxback; view <title>SmartME Docs</title>C2ME\n\tC2ME is a small remake of C programming language for OpenTTY;
Update SDK=execute sdk; install /home/nano; tick Downloading...; proxy raw.githubusercontent.com/mrlima4095/OpenTTY-J2ME/main/assets/lib/sdkme; install /home/sdkme; get nano; import /home/sdkme; tick; sdk; warn SmartME was installed the latest version from GitHub;
About=execute sdk; warn SmartME $SDK\nOpenTTY Toolkit;

